@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "My Movies";
}

<h1>My Movies</h1>

<!-- Create New Movie Button -->
<p>
    <a asp-action="Create" class="btn btn-success">Create New Movie</a>
</p>

<!-- Search & Year Filter Form -->
<form method="get" asp-action="Index">
    <p>
        Title: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" style="display:inline-block; width:auto; margin-right:10px;" />
        Year from: <input type="number" name="year" value="@Context.Request.Query["year"]" class="form-control" style="display:inline-block; width:auto; margin-right:10px;" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<!-- Movie Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var movie in Model)
{
    <tr>
        <td>@movie.Title</td>
        <td>@movie.ReleaseDate.ToShortDateString()</td>
        <td>@movie.Genre</td>
        <td>@movie.Price.ToString("C")</td>
        <td>
            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm">Details</a>
            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
